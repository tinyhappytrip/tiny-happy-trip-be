<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tinyhappytrip.playlist.mapper.PlaylistHashTagMapper">
    <insert id="insert">
        INSERT INTO playlist_hashtags (playlist_id, hashtag)
        VALUES
        <foreach collection="hashtags" item="hashtag" separator=",">
            (#{playlistId}, #{hashtag})
        </foreach>
    </insert>

    <delete id="delete">
        DELETE
        FROM playlist_hashtags
        WHERE playlist_id=#{playlistId}
    </delete>

    <select id="selectHashTagsByPlaylistId">
        SELECT hashtag
        FROM playlist_hashtags
        WHERE playlist_id=#{playlistId}
    </select>
</mapper>
