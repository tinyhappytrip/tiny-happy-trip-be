<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tinyhappytrip.story.mapper.StoryTagMapper">
    <insert id="insert">
        INSERT INTO story_tags (story_id, user_id) VALUES
        <foreach collection="tags" item="tag" separator=",">
            (#{storyId}, #{tag})
        </foreach>
    </insert>

    <select id="selectUserIdByStoryId">
        SELECT u.nickname
        FROM users u
                 JOIN story_tags t ON u.user_id = t.user_id
        WHERE t.story_id = #{storyId}
    </select>
</mapper>