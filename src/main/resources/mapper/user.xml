    <select id="selectByEmail">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

    <insert id="insert">
        INSERT INTO users (email, password, birthdate, nickname, social_type)
        VALUES (#{email}, #{password}, #{birthDate}, #{nickname}, #{socialType})
    </insert>

    <select id="selectByType">
        SELECT *
        FROM users
        <if test="type == 'email'">
            WHERE email = #{value}
        </if>
        <if test="type == 'nickname'">
            WHERE nickname = #{value}
        </if>
    </select>

    <update id="update">
        UPDATE users
        SET password      = #{password},
            nickname      = #{nickname},
            profile_image = #{profileImage},
            introduction  = #{introduction}
        WHERE user_id = #{userId}
    </update>

    <delete id="delete">
        DELETE
        FROM users
        WHERE user_id = #{userId}
    </delete>

    <select id="selectFollowerCountByUserId">
        SELECT COUNT(*)
        FROM follows
        WHERE follower_id = #{userId}
    </select>

    <select id="selectFollowingCountByUserId">
        SELECT COUNT(*)
        FROM follows
        WHERE followee_id = #{userId}
    </select>

    <select id="selectByUserId">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <select id="selectAllFollowerByUserId">
        SELECT *
        FROM follows
        WHERE follower_id = #{userId}
    </select>

    <select id="selectAllFollowingByUserId">
